<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="striker.gravitas_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Home" />
        <activity
            android:name=".activities.CategoryActivity"
            android:parentActivityName=".activities.Home" />
        <activity
            android:name=".activities.DetailActivity"
            android:parentActivityName=".activities.CategoryActivity" />
        <activity
            android:name=".activities.AboutGravitas"
            android:label="@string/title_activity_about_gravitas"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.Home"></activity>
    </application>

</manifest>